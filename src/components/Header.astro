---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const pathname = Astro.url.pathname;

const sections = pathname === "/" ? [] : pathname.replace(/\/$/, "").slice(1).split("/");
---

<nav class={className}>
  <h1 class="text-2xl font-bold font-mono">
    <a
      href="/"
      class="hover:text-zinc-400 transition-colors cursor-pointer"
    >
      kyle zheng
    </a>
    {sections.map((section, i) => (
      <>
        {" "}
        <a
          href={`/${sections.slice(0, i + 1).join("/")}`}
          class:list={[
            "hover:text-zinc-400 transition-colors cursor-pointer",
            i === sections.length - 1 && "underline"
          ]}
        >
          {section.replaceAll("_", " ")}
        </a>
      </>
    ))}
  </h1>
</nav>
